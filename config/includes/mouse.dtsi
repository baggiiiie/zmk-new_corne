#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/pointing.h>


&mmv {
  acceleration-exponent = <1>;
  time-to-max-speed-ms = <800>;
  trigger-period-ms = <1>;
  delay-ms = <0>;
};

&msc {
  acceleration-exponent = <1>;
  trigger-period-ms = <1>;
  delay-ms = <1>;
};

#undef ZMK_POINTING_DEFAULT_MOVE_VAL
#undef ZMK_POINTING_DEFAULT_SCRL_VAL
